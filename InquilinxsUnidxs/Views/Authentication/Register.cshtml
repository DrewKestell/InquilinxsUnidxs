@section scripts
{
    <script src="~/Content/JS/Register.js"></script>
}

<h2>Register</h2>

<hr />

<form method="post" onsubmit="return validatePassword()" action="~/Authentication/Register">
    <div class="form-group">
        <label for="username">Username<abbr class="required" title="This field is required"> *</abbr></label>
        <input class="form-control" id="username" type="text" name="username" required />
    </div>

    <div class="form-group">
        <label for="password">Password<abbr class="required" title="This field is required"> *</abbr></label>
        <input class="form-control" id="password" type="password" name="password" autocomplete="new-password" required />
    </div>

    <div class="form-group">
        <label for="confirm-password">Confirm Password<abbr class="required" title="This field is required"> *</abbr></label>
        <input class="form-control" id="confirm-password" type="password" name="confirmPassword" autocomplete="new-password" required />
    </div>

    <div class="form-group">
        <label for="email">Email<abbr class="required" title="This field is required"> *</abbr></label>
        <input class="form-control" id="email" type="email" name="email" required />
    </div>

    <input class="btn btn-primary" type="submit" value="Submit" />
</form>